
<div class="container">
<div class="row">
	<div class="col-md-6 col-md-offset-3 well">
	<%= form_tag '/login' do %>
		<div class="form_group">
			<%= label_tag :email %>
			<%= text_field_tag :email, nil, class: 'form-control'  %>
		</div>
		<div class="form_group">
			<%= label_tag :password %>
			<%= password_field_tag :password, nil, class: 'form-control'  %>
		</div><br>

		<%= submit_tag 'Login', class: 'btn btn-success'  %>
	<% end %>
		
	</div>
</div>
</div><!-- container -->